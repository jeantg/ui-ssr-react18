{
  "scripts": {
    "bundler:dev": "NODE_ENV=development nodemon --exec ts-node -T ./webpack.config.ts",
    "bundler:prod": "NODE_ENV=production ts-node -T ./webpack.config.ts",
    "server:dev": "NODE_ENV=development nodemon --exec ts-node -T --emit  -- ./server.tsx",
    "server:prod": "NODE_ENV=production ts-node -T --emit  -- ./server.tsx",
    "build:css": "tailwindcss -o ./build/index.css --watch --minify",
    "dev": "run-p build:css bundler:dev server:dev",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "prettier --check \"src/**/*.{ts,tsx}\"",
    "start": "run-p build:css bundler:prod server:prod"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.2",
    "ts-node": "^10.9.1",
    "yarn-run-all": "^3.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.19.6",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.7",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "autoprefixer": "^10.4.13",
    "babel-loader": "^9.0.0",
    "babel-preset-react-app": "^10.0.1",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "koa": "^2.13.4",
    "nodemon": "^2.0.20",
    "postcss": "^8.4.18",
    "postcss-loader": "^7.0.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "style-loader": "^3.3.1",
    "tailwindcss": "^3.2.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.2.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "engines": {
    "node": "16.x"
  }
}
